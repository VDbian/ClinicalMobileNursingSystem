<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="148px"
        android:background="@drawable/shape_background_title"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="32px"
            >

            <ImageView
                android:id="@+id/imageView_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/repeat"
                android:tint="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textView_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:layout_toRightOf="@+id/imageView_back"
                android:text="@string/back"
                android:textColor="@color/colorWhite"
                android:textSize="32px"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16px"
            android:text="@string/care_to_collect"
            android:textColor="@color/colorWhite"
            android:textSize="37px"
            />

        <RelativeLayout
            android:id="@+id/relativeLayout_scan"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24px"
            android:layout_marginRight="32px"

            >

            <ImageView
                android:id="@+id/imageView_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/qr_code"
                android:tint="@color/colorWhite"
                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_bedNum"
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:layout_below="@+id/relativeLayout_title"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite"
        >

        <TextView
            android:id="@+id/textView_bedside_card"
            android:layout_width="156px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center"
            android:text="@string/bed_num"
            android:textColor="@color/colorBlack"
            android:textSize="34px"
            />

        <EditText
            android:id="@+id/editText_bedside_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="44px"
            android:layout_toRightOf="@+id/textView_bedside_card"
            android:hint="@string/hint"
            android:textColor="@color/colorEditTextFinish"
            android:textColorHint="@color/colorEditHint"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="34px"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="text"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_bedNum"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="32px"
            android:text="@string/patient_name"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_name_show"
            android:layout_width="136px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="32px"
            android:text="一二三四五"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="32px"
            android:text="@string/patient_sex"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_sex_show"
            android:layout_width="64px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="32px"
            android:text="男"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="32px"
            android:text="@string/patient_age"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_age_show"
            android:layout_width="64px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="32px"
            android:text="35"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_bed_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="32px"
            android:text="@string/patient_bed_num"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/textView_patient_bed_num_show"
            android:layout_width="88px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="32px"
            android:text="A01"
            android:textColor="@color/colorMainText"
            android:textSize="28px"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_button"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120px"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_temperature_chart"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/shape_button_medical_order_trearing"
            android:text="@string/temperature_chart"
            android:textColor="@color/colorWhite"
            android:textSize="36px"
            />
        <Button
            android:id="@+id/button_import_the_last_record"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1.5"
            android:background="@drawable/shape_button_medical_order_trearing"
            android:text="@string/import_the_last_record"
            android:textColor="@color/colorWhite"
            android:textSize="36px"
            />

        <Button
            android:id="@+id/button_save"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:background="@drawable/shape_button_medical_order_trearing"
            android:text="@string/save"
            android:textColor="@color/colorWhite"
            android:textSize="36px"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_collect_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_above="@+id/linearLayout_button"
        android:layout_below="@+id/linearLayout_information"
        android:layout_marginTop="20px"
        android:layout_marginBottom="32px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/shape_listview_divider"
            android:showDividers="middle"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_temperature"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/temperature"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_temperature"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_pulse"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/pulse"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_pulse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_pulse"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_breathe"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/breathe"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_breathe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_breathe"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_blood_glucose"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/blood_glucose"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_blood_glucose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_blood_glucose"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_introduce_quantity"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/introduce_quantity"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/textView_introduce_quantity_unit"
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:text="@string/ml"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    />
                <EditText
                    android:id="@+id/editText_introduce_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_introduce_quantity"
                    android:layout_toLeftOf="@id/textView_introduce_quantity_unit"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_output_quantity"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/output_quantity"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/textView_output_quantity_unit"
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:text="@string/ml"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    />
                <EditText
                    android:id="@+id/editText_output_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_output_quantity"
                    android:layout_toLeftOf="@id/textView_output_quantity_unit"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_systolic_pressure"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/systolic_pressure"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_systolic_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_systolic_pressure"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_diastolic_pressure"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/diastolic_pressure"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_diastolic_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_diastolic_pressure"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_height"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/height"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/textView_height_unit"
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:text="@string/cm"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    />
                <EditText
                    android:id="@+id/editText_height"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_height"
                    android:layout_toLeftOf="@id/textView_height_unit"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_weight"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/weight"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/textView_weight_unit"
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:text="@string/kg"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    />
                <EditText
                    android:id="@+id/editText_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_weight"
                    android:layout_toLeftOf="@id/textView_weight_unit"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                >
                <TextView
                    android:id="@+id/textView_bowel_frequency"
                    android:layout_width="170px"
                    android:layout_height="match_parent"
                    android:text="@string/bowel_frequency"
                    android:textColor="@color/colorBlack"
                    android:textSize="34px"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/editText_bowel_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView_bowel_frequency"
                    android:layout_marginRight="10px"
                    android:hint="@string/hint"
                    android:textColor="@color/colorEditTextFinish"
                    android:textColorHint="@color/colorEditHint"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="34px"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/bottom_item" ></include>
</RelativeLayout>